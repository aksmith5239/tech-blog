 <h2 class="center-text">All Blog Posts</h2>
 <ol class='post-list'>
     {{#each posts as |post| }}
     <li class="post-list-item">
         <article class="post">
             <div class="post-title">
                 <a href="{{post_url}}" target="_blank">{{title}}</a>
                 <span>({{post_url}})</span>
             </div>
             <div class="post-info">
                 Created By: <span style="font-weight: bold;">{{user.username}}</span> on {{created_at}}
                 <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
                
             </div>
              
         </article>
     </li>
     {{/each}}
</ol>
 